    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        app:lottie_rawRes="@raw/flag"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/l0"
        app:layout_constraintVertical_bias="0.29"
        app:layout_constraintBottom_toTopOf="@id/start_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_height="wrap_content"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flag Quiz Game"
        android:textStyle="bold"
        android:translationY="10sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:textSize="50sp"
        android:padding="10dp"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/start_txt"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textAlignment="center"
        android:textCursorDrawable="@color/white"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/xmf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:translationY="250dp"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/xmf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from\nXMF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_margin="10dp"/>

